{
   "name": "Unnamed",
   "version": "1.0",
   "default_locale": "en",
   "description": "Cute eco-friendly messages when you open a tab!",

   "chrome_url_overrides": {
     "newtab": "popup.html"
   },

   "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },

    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
   "manifest_version": 2
 }
